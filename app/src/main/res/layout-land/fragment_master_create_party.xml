<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usecases.master.fragments.MasterCreatePartyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/txt_titleNewPartyCreateMaster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/partyNewCreateTittle"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_marginBottom="40dp"/>

        <EditText
            android:id="@+id/etx_setNamePartyMaster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/partyNamehint"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn_createPartyMaster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/partyCreateButton" />
    </LinearLayout>

</FrameLayout>