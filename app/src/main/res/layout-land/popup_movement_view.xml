<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|top"
        android:layout_margin="50dp">

        <TextView
            android:id="@+id/txt_tittleMovementInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popUpMovementTittle"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"/>

        <SeekBar
            android:id="@+id/skb_movementNumber"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginBottom="30dp"
            android:max="20"
            android:progress="1"
            android:background="@color/purple_200"/>

        <TextView
            android:id="@+id/txt_movementInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popUpMovementInfo"
            android:gravity="center"
            android:layout_marginBottom="60dp"/>

        <Button
            android:id="@+id/btn_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popUpMovementSelect" />
    </LinearLayout>
</FrameLayout>